<%- include('../components/header.ejs', { title: 'Detalle de foto' }) %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h2><%= photo.title %></h2>
            <img src="<%= photo.url %>" alt="<%= photo.title %>" class="img-fluid rounded mb-4" style="max-height: 500px;">
            <p>Subida por: <%= userName %> (<%= userEmail %>)</p>
            <hr>
            <h4>Álbumes donde está esta foto:</h4>
            <ul class="list-group mb-3">
                <% if (albums && albums.length > 0) { %>
                    <% albums.forEach(function(album) { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><%= album.title %></span>
                            <form action="/photos/<%= photo.id %>/remove-from-album/<%= album.id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Quitar de este álbum</button>
                            </form>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="list-group-item">No pertenece a ningún álbum.</li>
                <% } %>
            </ul>
            <h4>Añadir a álbum:</h4>
            <form action="/photos/<%= photo.id %>/add-to-album" method="POST" class="mb-4">
                <div class="input-group">
                    <select name="albumId" class="form-select" required>
                        <option value="">Selecciona un álbum</option>
                        <% userAlbums.forEach(function(album) { if (!albums.some(a => a.id === album.id)) { %>
                            <option value="<%= album.id %>"><%= album.title %></option>
                        <% }}); %>
                    </select>
                    <button type="submit" class="btn btn-success">Añadir</button>
                </div>
            </form>
            <form action="/photos/<%= photo.id %>/delete" method="POST" onsubmit="return confirm('¿Seguro que quieres eliminar esta foto? Se eliminará de todos los álbumes.');">
                <button type="submit" class="btn btn-danger">Eliminar foto</button>
            </form>
        </div>
    </div>
</div>
<%- include('../components/footer.ejs') %>
