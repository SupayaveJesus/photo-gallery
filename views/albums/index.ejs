<%- include('../components/header.ejs', { title: 'Mis Álbumes' }) %>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Mis Álbumes</h1>
        <a href="/albums/create" class="btn btn-success">Crear nuevo álbum</a>
    </div>
    <% if (albums && albums.length > 0) { %>
        <div class="row">
            <% albums.forEach(function(album) { %>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <% if (album.coverPhoto && album.coverPhoto.url) { %>
                            <img src="<%= album.coverPhoto.url %>" class="card-img-top" alt="Portada del álbum" style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <img src="/img/default.jpg" class="card-img-top" alt="Sin portada" style="height: 200px; object-fit: cover;">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= album.title %></h5>
                            <a href="/albums/<%= album.id %>" class="btn btn-primary">Ver álbum</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center mt-5" role="alert">
            <h4 class="alert-heading">¡No tienes álbumes aún!</h4>
            <p>Crea tu primer álbum para empezar a organizar tus fotos.</p>
            <a href="/albums/create" class="btn btn-success mt-3">Crear álbum</a>
        </div>
    <% } %>
</div>
<%- include('../components/footer.ejs') %>